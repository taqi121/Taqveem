@model IEnumerable<Point_of_sale_system.Models.Expens>

@{
    ViewBag.Title = "ViewExpenses";
    Layout = "~/Views/Shared/_AdminSharedView.cshtml";
}
    <div id="tableDropdown" class="col-lg-12 col-12 layout-spacing">
        <div class="statbox widget box box-shadow">
            <div class="widget-header">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                        <h4>Supplier List</h4>
                    </div>
                </div>
            </div>
            <div class="widget-content widget-content-area">
                <div class="table-responsive">
                    <table class="table table-bordered mb-4">
                        <thead>
                            <tr>
                                <th>Reference Number</th>
                                <th>Expense FOr</th>
                                <th>Date</th>
                                <th class="text-center"></th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.ReferenceNo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Expensefor)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Today_Date)</td>
                                    <td class="text-center">@*<span class="badge badge-success">Approved</span>*@</td>
                                    <td class="text-center">

                                        <div class="dropdown custom-dropdown">
                                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
                                            </a>

                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink1">
                                                <a class="dropdown-item" href="/Expense/EditExpenses/@item.ID">Edit</a>
                                                <a class="dropdown-item" href="/Expense/DetailsOfExpense/@item.ID">Details</a>
                                            </div>
                                        </div>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
