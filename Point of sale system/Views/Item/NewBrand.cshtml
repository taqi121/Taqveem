@model Point_of_sale_system.Models.Brand
@{
    ViewBag.Title = "NewBrand";
    Layout = "~/Views/Shared/_AdminSharedView.cshtml";
}

<div class="col-md-11" style="margin-left:2%">
    <div class="col-md-4">
        <strong>Items</strong><span>Add Item Brand</span>

    </div>
    <div class="col-md-12">
        <hr style="border:solid 0.1px white" />
    </div>
    @using (Html.BeginForm("NewBrand", "Item",FormMethod.Post))
    {
        <div class="form-row col-md-6">
            <div class="form-group col-md-12">
                <label for="name">Name</label>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Name" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-12">
            <label for="txtarea">Description</label>
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Description" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
        <div class="br-right-30">
            <hr style="border:solid 0.1px white" />
            <button type="submit" class="btn btn-primary mt-3">Save</button>
            <button type="reset" class="btn btn-danger mt-3">Reset</button>
        </div>
    }
</div>
