@model Point_of_sale_system.Models.Item

@{
    ViewBag.Title = "DetailsOfItems";
    Layout = "~/Views/Shared/_AdminSharedView.cshtml";
}

<!-- Content -->
<div class="col-xl-4 col-lg-6 col-md-5 col-sm-12 layout-top-spacing">

    <div class="user-profile layout-spacing">
        <div class="widget-content widget-content-area">
            <div class="d-flex justify-content-between">
                <h3 class="">Profile</h3>
                <a href="/Item/EditItem/@Model.ID" class="mt-2 edit-profile"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-3"><path d="M12 20h9"></path><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path></svg></a>
            </div>
            <div class="text-center user-info">
                <div class="d-flex" style="margin-left:15%;">
                    <div class="usr-img-frame mr-2 rounded-circle">
                        <img alt="avatar" class="img-fluid rounded-sm" src="~/Photo/@Model.image" style="width:200px;">
                        
                    </div>
                </div>
                <p class="">@Html.DisplayFor(model => model.Name)</p>
            </div>
            <div class="user-info-list">

                <div class="">
                    <ul class="contacts-block list-unstyled">
                        <li class="contacts-block__item">
                            ID of Item: &nbsp;&nbsp; @Html.DisplayFor(model => model.ID)
                        </li>
                        <li class="contacts-block__item">
                            Expiry Date: &nbsp;&nbsp;@Html.DisplayFor(model => model.ExpiryDate)
                        </li>
                        <li class="contacts-block__item">
                           Sales Price: &nbsp;&nbsp;@Html.DisplayFor(model => model.salesPrice)
                        </li>
                        
                    </ul>
                </div>
            </div>
        </div>
    </div>

    
</div>

<div class="col-xl-8 col-lg-6 col-md-7 col-sm-12 layout-top-spacing">

    <div class="bio layout-spacing ">
        <div class="widget-content widget-content-area">
            <h3 class="">Bio</h3>
            <p>@Html.DisplayFor(model => model.Description)</p>

            <div class="bio-skill-box">

                <div class="row">

                    <div class="col-12 col-xl-6 col-lg-12 mb-xl-5 mb-5 ">

                        <div class="d-flex b-skills">
                            <div class="">
                                <h5>Price</h5>
                                <p>@Html.DisplayFor(model => model.price)</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-xl-6 col-lg-12 mb-xl-5 mb-5 ">
                        <div class="d-flex b-skills">
                            <div class="">
                                <h5>Quantity</h5>
                                <p>@Html.DisplayFor(model => model.Quantity)</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-xl-6 col-lg-12 mb-xl-5 mb-5 ">
                        <div class="d-flex b-skills">
                            <div class="">
                                <h5>Tax</h5>
                                <p>@Html.DisplayFor(model => model.tax)</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-xl-6 col-lg-12 mb-xl-5 mb-5 ">
                        <div class="d-flex b-skills">
                            <div class="">
                                <h5>Stock</h5>
                                <p>@Html.DisplayFor(model => model.Stock)</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-xl-6 col-lg-12 mb-xl-5 mb-5 ">
                        <div class="d-flex b-skills">
                            <div class="">
                                <h5>Brand</h5>
                                <p>@Html.DisplayFor(model => model.Brand.Name)</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-xl-6 col-lg-12 mb-xl-5 mb-5 ">
                        <div class="d-flex b-skills">
                            <div class="">
                                <h5>Category</h5>
                                <p>@Html.DisplayFor(model => model.Category.Name)</p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

</div>

<div class="footer-wrapper">
    <div class="footer-section f-section-1">
        <p class="">Copyright © 2020 Taqi Malik, All rights reserved.</p>
    </div>
